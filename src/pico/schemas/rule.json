{
  "$id": "pico/schemas/rule.json",
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "object",
  "additionalProperties": false,
  "properties": {
    "label": { "type": "string", "pattern": "^[0-9a-zA-Z -_]+$" },
    "if": { "type": "array", "items": { "$ref": "condition.json" } },
    "then": { "type": "array", "items": { "$ref": "action.json" } },
    "else": { "type": "array", "items": { "$ref": "action.json" } }
  },
  "required": ["label", "if"]
}
