{
  "$id": "pico/schemas/action.json",
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "object",
  "properties": {
    "act": { "type": "string", "enum": ["rule", "setvar", "template"] }
  },
  "anyOf": [{ "$ref": "action.setvar.json" }, { "$ref": "action.template.json" }, { "$ref": "action.rule.json" }],
  "required": ["act"]
