{
  "$id": "pico/schemas/condition.list.json",
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "list": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "op": { "type": "string", "enum": ["list"] },
        "traversal": { "type": "string", "enum": ["and", "or"], "default": "or" },
        "conditions": { "type": "array", "items": { "$ref": "opcondition.json" } }
      },
      "required": ["op", "conditions"]
    }
  },
  "allOf": [{ "$ref": "#/definitions/list" }, { "$ref": "uuid.json" }]
}
